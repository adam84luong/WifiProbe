<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WifiProbe.AppBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_800</item>
        <item name="colorPrimaryVariant">@color/primary_800</item>
        <item name="colorOnPrimary">@color/primary_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/second_400</item>
        <item name="colorSecondaryVariant">@color/second_600</item>
        <item name="colorOnSecondary">@color/second_600</item>
        <item name="colorAccent">@color/second_100</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/second_700</item>
    </style>

    <style name="Theme.WifiProbe" parent="Theme.MaterialComponents.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/primary1000</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary1000</item>
        <item name="colorPrimaryVariant">@color/primary_900</item>
        <item name="colorSecondary">@color/second_700</item>
        <item name="colorSecondaryVariant">@color/second_900</item>
    </style>

    <!-- Foreground Color for current active wifi item and content card view -->
    <color name="fg_wifiactive">#001b5c</color>
    <!-- Background Color for current active wifi items and for the card view -->
    <color name="bg_wifiactive_cdview">#d9fffe</color>

    <!-- Background Color for wifi items and for the card view -->
    <color name="bg_wifi_items_cdview">#e8e8e8</color>

    <!-- Foreground Color back button (arrow) -->
    <color name="fg_back_button">@color/second_400</color>

    <!-- Foreground Colors for current active wifi details -->
    <color name="fg_active_wifi_details1">#5700d3</color>
    <color name="bg_active_wifi_details1">#fdfdfd</color>

    <!-- Background Color for list with configured networks -->
    <color name="bg_configNetworks">@color/second_200</color>
    <color name="bg_configNetworksEnd">@color/second_600</color>
    <color name="color_spin_items_stroke">#ab3a00</color>

    <!-- Color for Dialog Wifi Detail -->
    <color name="fg_dialog_wifi_detail_disabled">#666666</color>

    <!-- Color for Warning Wifi not connected -->
    <color name="bg_wifi_not_connected">#2873c7</color>
    <color name="fg_wifi_not_connected">#fff1ef</color>

    <style name="Theme.WifiProbe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WifiProbe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>


